<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBar" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/colorDarkBlue</item>
        <item name="android:statusBarColor">@color/colorDarkBlue</item>
    </style>

    <style name="SubToolBar" parent="ToolBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:background">@color/colorDarkBlue</item>
        <item name="android:statusBarColor">@color/colorDarkBlue</item>
    </style>

    <style name="ImageButton" parent="AppTheme">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
